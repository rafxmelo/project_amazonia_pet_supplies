<h1>Your Orders</h1>

<% if @orders.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Order ID</th>
        <th>Total Amount</th>
        <th>Status</th>
        <th>Order Date</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.id %></td>
          <td><%= number_to_currency(order.total_amount) %></td>
          <td><%= order.status.humanize %></td>
          <td><%= order.created_at.strftime("%Y-%m-%d") %></td>
          <td><%= link_to 'View', order_path(order), class: 'btn btn-primary btn-sm' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>You have no orders.</p>
<% end %>
