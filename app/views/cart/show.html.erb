<h1>Your Shopping Cart</h1>

<% if @cart.any? %>
  <table>
    <thead>
      <tr>
        <th>Product</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Total</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @cart.each do |id, quantity| %>
        <% product = Product.find(id) %>
        <tr>
          <td><%= product.name %></td>
          <td>
            <%= form_with url: update_quantity_cart_path(id), method: :post do %>
              <%= number_field_tag :quantity, quantity, min: 1 %>
              <%= submit_tag "Update" %>
            <% end %>
          </td>
          <td><%= number_to_currency(product.price) %></td>
          <td><%= number_to_currency(product.price * quantity) %></td>
          <td>
            <%= button_to 'Remove', remove_cart_path(id), method: :post %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'Checkout', new_order_path, class: 'btn btn-primary' %>
<% else %>
  <p>Your cart is empty</p>
<% end %>
